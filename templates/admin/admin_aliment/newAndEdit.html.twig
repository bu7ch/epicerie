{% extends "base.html.twig" %}

{% block title %}Edition d'un aliment
{% endblock %}

{% block monTitre %}
	{% if edition %}
		Page d'edition
		{{aliment.name}}
	{% else %}
		Ajout d'un aliment
	{% endif %}
{% endblock %}

{% block body %}
	{{form_start(form)}}
	<div class="row">
		<div class="col-6">
			{% if edition %}
				<img src="{{asset('images/aliments/'~ aliment.image ~'.jpg')}}" style="width:25%" alt="">
			{% endif %}
			{{form_row(form.imageFile)}}
		</div>

		<div class="col-6">
			{{form_widget(form)}}
		</div>
	</div>
  {% if edition %}
	<input type="submit" class="btn btn-primary" value=" mise Ã  jour">
  {% else %}
	<input type="submit" class="btn btn-primary" value="Ajouter">
